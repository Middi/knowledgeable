extends layout

block content
    div.todos
        ul
            li.top-li(data-id="/articles/add")
                a.addButton(href='/articles/add/')
                    i.fa.fa-plus(aria-hidden='true')
        div#articles-ul
            each article, i in articles.reverse()
                div.child(data-id="/article/" +article._id)
                    div.inner
                        a(data-id="/article/" +article._id)= article.title
                        p(data-id="/article/" +article._id)!= article.body.replace(/\n/g, '<br />')

                    